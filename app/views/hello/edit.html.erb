  <%=f.label :url%>
  <%=f.text_field :url, class:'form-control'%>

  <%= f.select("servidor_id") do %>
    <% Servidor.all.each do |s| %>
      <%if  s.id == @site.servidor_id%>
        <%= content_tag(:option,s.nome,value:s.id, selected:"selected")%>
      <%else%>
       <%= content_tag(:option,s.nome,value:s.id)%>
      <%end%>
    <%end%>
  <%end%>

  <%= f.submit "Editar site", class: "btn btn-primary" %>
<%end%>
